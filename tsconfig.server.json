{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "outDir": "./dist",
    "sourceMap": true,
  },
  "include": [
    "server/**/*.ts",
    "bin/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "client"
  ]
}