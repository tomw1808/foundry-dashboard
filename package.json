{
  "name": "foundry-dashboard",
  "version": "0.1.0",
  "description": "A local dashboard for interacting with Foundry projects via browser wallets.",
  "main": "dist/server/server.js",
  "bin": {
    "foundry-dashboard": "./dist/bin/foundry-dashboard.js"
  },
  "scripts": {
    "server": "node dist/server/server.js", 
    "server:dev": "tsx watch server/server.ts", 
    "client:dev": "cd client && npm run dev",
    "dev": "concurrently \"npm:server:dev\" \"npm:client:dev\"",
    "build:client": "cd client && npm run build",
    "build:server": "tsc -p tsconfig.server.json", 
    "build": "npm run build:client && npm run build:server", 
    "start": "node ./dist/bin/forge-dashboard.js", 
    "prestart": "npm run build",
    "typecheck": "tsc -p tsconfig.server.json --noEmit" 
  },
  "files": [
    "dist/", 
    "client/dist/"
  ],
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "open": "^8.4.0",
    "pino": "^9.3.2", 
    "viem": "^2.28.3",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.13",
    "@types/open": "^6.0.0",
    "@types/ws": "^8.5.11",
    "@types/yargs": "^17.0.32",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.10",
    "pino-pretty": "^11.2.1", 
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "node": ">=16"
  },
  "license": "MIT"
}
