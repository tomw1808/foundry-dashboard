{
  "name": "forge-dashboard",
  "version": "0.1.0",
  "description": "A local dashboard for interacting with Foundry projects via browser wallets.",
  "main": "server/server.js",
  "bin": {
    "forge-dashboard": "./bin/forge-dashboard.js"
  },
  "scripts": {
    "server": "node server/server.js",
    "server:dev": "nodemon server/server.js",
    "client:dev": "cd client && npm run dev",
    "dev": "concurrently \"npm:server:dev\" \"npm:client:dev\"",
    "build:client": "cd client && npm run build",
    "build": "npm run build:client",
    "start": "node ./bin/forge-dashboard.js",
    "prestart": "npm run build"
  },
  "files": [
    "bin/",
    "server/",
    "client/dist/"
  ],
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2", // Downgrade to latest Express v4 stable
    "open": "^10.1.2",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=16"
  },
  "license": "MIT"
}
